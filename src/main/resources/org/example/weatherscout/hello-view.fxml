<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="659.0" spacing="15.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.weatherscout.client.HelloController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <Label styleClass="title-label" text="WeatherScout" />

    <HBox alignment="CENTER" spacing="10.0">
        <ToggleButton fx:id="unitToggle" onAction="#onUnitToggle" styleClass="unit-toggle" text="°C" />
        <Button fx:id="themeButton" onAction="#changeTheme" styleClass="unit-toggle" text="Normal" textAlignment="CENTER" />
    </HBox>

    <VBox alignment="CENTER" spacing="0">
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="cityInput" onAction="#onHelloButtonClick" prefWidth="280.0" promptText="Stadt eingeben..." styleClass="search-field" />
            <Button onAction="#onHelloButtonClick" styleClass="search-button" text="Suche" />
        </HBox>
    </VBox>

    <VBox alignment="CENTER" spacing="8.0">
        <Label fx:id="welcomeText" styleClass="info-label" />
        <Label fx:id="temperature" styleClass="info-label" />
        <HBox fx:id="humidityBox" alignment="CENTER" managed="false" spacing="10.0" visible="false">
            <Label styleClass="info-label" text="Luftfeuchtigkeit:" />
            <Label fx:id="humidity" styleClass="info-label" />
        </HBox>
        <Label fx:id="clothingTip" styleClass="tip-label" textAlignment="CENTER" wrapText="true" />
    </VBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#onShowHistoryClick" prefHeight="33.0" prefWidth="130.0" styleClass="history-button" text="HistoryAnzeigen" textAlignment="CENTER" />
        <Button styleClass="export-button" text="HistoryExportAlsCSV" textAlignment="CENTER" />
        <Button fx:id="detailsButton" onAction="#onDetailsClick" styleClass="details-button" text="Detailansicht" textAlignment="CENTER" />
        <Button onAction="#onClearHistoryClick" styleClass="clear-button" text="HistoryLöschen" textAlignment="CENTER" />
    </HBox>

    <TextArea fx:id="historyArea" editable="false" prefHeight="171.0" prefWidth="390.0" promptText=" " styleClass="history-area" wrapText="true" />
</VBox>
