<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="450.0" spacing="15.0"
      stylesheets="@styles.css"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.weatherscout.HelloController">
    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <Label text="â˜€ï¸ WeatherScout" styleClass="title-label" />

    <!-- Suchfeld mit Autocomplete -->
    <VBox spacing="0" alignment="CENTER">
        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="cityInput"
                       onAction="#onHelloButtonClick"
                       prefWidth="280.0"
                       promptText="Stadt eingeben..."
                       styleClass="search-field" />
            <Button onAction="#onHelloButtonClick"
                    text="ðŸ”"
                    styleClass="search-button" />
        </HBox>
        <!-- Vorschlagsliste (anfangs versteckt) -->
        <ListView fx:id="suggestionList"
                  prefWidth="280.0"
                  maxHeight="120.0"
                  visible="false"
                  styleClass="suggestion-list" />
    </VBox>

    <VBox alignment="CENTER" spacing="8.0">
        <Label fx:id="welcomeText" styleClass="info-label" />
        <Label fx:id="temperature" styleClass="info-label" />
        <Label fx:id="humidity" styleClass="info-label" />
        <Label fx:id="clothingTip" styleClass="tip-label" wrapText="true" textAlignment="CENTER" />
    </VBox>

    <!-- Historie Bereich -->
    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#onShowHistoryClick" text="ðŸ“œ Historie anzeigen" styleClass="history-button" />
        <Button onAction="#onClearHistoryClick" text="ðŸ—‘ï¸ LÃ¶schen" styleClass="clear-button" />
    </HBox>

    <TextArea fx:id="historyArea"
              prefHeight="100.0"
              prefWidth="380.0"
              editable="false"
              wrapText="true"
              promptText="Noch keine Historie vorhanden..."
              styleClass="history-area" />
</VBox>
